  h3 Sass
  div.source(id="panel")
      pre
        code.
          .meter-container {
            width: 100%;
            background-color: transparent;
            padding: .25em;
            border: solid 2px $borderColor;
            border-radius: 4px;
          }

          .meter {
            display: block;
            width: 20%;
            height: 30px;
            background-color: $secondaryColor;
            border-radius: 4px;
            transition: all 1.2s ease;
            &:hover {
              width: 100%;
              background-color: $primaryColor;
            };
          }
